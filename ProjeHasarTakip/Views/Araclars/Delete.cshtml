@model ProjeHasarTakip.Models.Arac.Araclar

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<button type="button" class="btn btn-label-danger text-nowrap d-inline-flex position-relative">
    Bu Araç Bilgilerini Silmek İstediğinize Eminmisiniz ?
    <span class="position-absolute top-0 start-100 translate-middle badge badge-dot border border-2 p-2 bg-danger"></span>
</button>
<div>
    <hr />


    <div class="col-xl-4 col-lg-5 col-md-5 order-1 order-md-0">
        <!-- User Card -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="user-avatar-section">
                    <div class="d-flex align-items-center flex-column">
                        <img class="img-fluid rounded mb-3 mt-4" src="@Html.DisplayFor(model => model.AracResim)" height="120" width="120" alt="User avatar">
                        <div class="user-info text-center">
                            <h4>@Html.DisplayFor(model => model.Arackod)</h4>
                            <span class="badge bg-label-danger rounded-pill">@Html.DisplayFor(model => model.AracPlaka)</span>
                        </div>
                    </div>
                </div>

                <h5 class="pb-3 border-bottom mb-3">Personel Detayları:</h5>
                <div class="info-container">
                    <ul class="list-unstyled mb-4">
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Model:</span>
                            <span>@Html.DisplayFor(model => model.AracModel)</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Marka:</span>
                            <span>@Html.DisplayFor(model => model.AracMarka)</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Tipi:</span>
                            <span class="badge rounded-pill bg-label-primary me-1l">@Html.DisplayFor(model => model.AracTip)</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Durum:</span>
                            <span>@Html.DisplayFor(model => model.AracDurum)</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Konum:</span>
                            <span>@Html.DisplayFor(model => model.AracKonum)</span>
                        </li>
                        <li class="mb-3">
                            <span class="fw-medium text-heading me-2">Muayene Tarihi:</span>
                            @Html.DisplayFor(model => model.AracMuayene)
                        </li>
                       
                    </ul>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger waves-effect waves-light">Sil</button>
                            @*<input type="submit" value="Sil" class="btn btn-danger suspend-user waves-effect" />*@ |
                            @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-secondary waves-effect waves-light" })
                        </div>
                    }


                </div>
            </div>
        </div>
        <!-- /User Card -->
        <!-- Plan Card -->
        <!-- /Plan Card -->
    </div>

  


</div>

@model IEnumerable<ProjeHasarTakip.Models.Personel.Personeller>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<section class="content">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-3 col-md-5 order-1 order-md-0">
                <!-- User Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="user-avatar-section">
                            <div class="d-flex align-items-center flex-column">
                                <img class="img-fluid rounded mb-3 mt-4" src="@Html.DisplayFor(model => item.PersonelResim)" height="120" width="120" alt="User avatar">
                                <div class="user-info text-center">
                                    <h4>@Html.DisplayFor(model => item.AdSoyad)</h4>
                                    <span class="badge bg-label-danger rounded-pill">@Html.DisplayFor(model => item.Gorev)</span>
                                </div>
                            </div>
                        </div>

                        <div class="info-container">
                            <ul class="list-unstyled mb-4">
                                
                                <li class="mb-3">
                                    <span class="fw-medium text-heading me-2">Email:</span>
                                    <span>@Html.DisplayFor(model => item.Email)</span>
                                </li>
                                <li class="mb-3">
                                    <span class="fw-medium text-heading me-2">Sicil:</span>
                                    <span class="badge bg-label-success rounded-pill">@Html.DisplayFor(model => item.Sicil)</span>
                                </li>
                                <li class="mb-3">
                                    <span class="fw-medium text-heading me-2">Yetki:</span>
                                    <span>@Html.DisplayFor(model => item.Yetki)</span>
                                </li>
                                
                                <li class="mb-3">
                                    <span class="fw-medium text-heading me-2">Telefon:</span>
                                    <span>@Html.DisplayFor(model => item.Telefon)</span>
                                </li>

                            </ul>
                            <div class="d-flex justify-content-center">
                                <div class="demo-inline-spacing">

                                    <a href="mailto:@item.Email" class="btn btn-sm btn-warning  waves-effect waves-light">
                                        <i class="tf-icons mdi mdi-checkbox-marked-circle-outline me-1"></i>Mail Gönder
                                    </a>
                                    <a href="tel:@item.Telefon" class="btn btn-sm btn-success   waves-effect waves-light">
                                        <i class="tf-icons mdi mdi-checkbox-marked-circle-outline me-1"></i>Ara
                                    </a>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
    
            </div>

        }
    </div>

  







</section>

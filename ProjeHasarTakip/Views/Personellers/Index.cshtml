@model IEnumerable<ProjeHasarTakip.Models.Personel.Personeller>

@{
    ViewBag.Title = "Personeller";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 


<div class="card">
    <h5 class="card-header">
        @Html.ActionLink("Personel Ekle", "Create", null, new { @class = "btn btn-primary waves-effect waves-light" })
    </h5>
    <table id="personellistele" class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PersonelResim)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AdSoyad)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sicil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Yetki)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gorev)
                </th>
                <th>
    @Html.DisplayNameFor(model => model.Sifre)
</th>
                <th>
                    Aksiyon
                </th>
                
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="rounded-circle" src="@item.PersonelResim" alt="Avatar" height="60" width="70">

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdSoyad)
                    </td>

                    <td>
                        <a href="tel:@item.Telefon">@item.Telefon</a>
                    </td>
                    <td>
                        <a href="mailto:@item.Email">@item.Email</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sicil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Yetki)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gorev)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sifre)
                    </td>
                    <td>

                        <a href="/Personellers/Edit/@item.PersonelId" class="mdi mdi-account-edit-outline mdi-24px" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Düzenle"> </a>
                        |
                        <a href="/Personellers/Details/@item.PersonelId" class="mdi mdi-card-account-details-outline mdi-24px" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Detay"> </a>
                        |
                        <a href="/Personellers/Delete/@item.PersonelId" class="mdi mdi-trash-can-outline mdi-24px" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Sil"> </a>

                    </td>
                    
                </tr>
            }

        </tbody>


    </table>


</div>

@section scripts {
    <link href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#personellistele').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json',
                },
                dom: 'Blfrtip'
            });
        });
    </script>
}

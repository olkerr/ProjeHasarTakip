@model List<ProjeHasarTakip.Models.Arac.Araclar>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Araclar ve Hasarları</h4>
    <hr />
    @for (int i = 0; i < Model.Count; i += 4)
    {
        <div class="row">
            @for (int j = i; j < i + 4 && j < Model.Count; j++)
            {
                var arac = Model[j];
                <div class="col-xl-3 col-lg-3 col-md-3 order-3 order-md-3">
                    <!-- User Card -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="user-avatar-section">
                                <div class="d-flex align-items-center flex-column">
                                    <a href="@Url.Content(arac.AracResim)" target="_blank">
                                        <img class="img-fluid rounded mb-3 mt-4" src="@Url.Content(arac.AracResim)" height="120" width="120" alt="User avatar">
                                    </a>
                                    <div class="user-info text-center">
                                        <h4>@Html.DisplayFor(model => arac.Arackod)</h4>
                                        <span class="badge bg-label-danger rounded-pill">@Html.DisplayFor(model => arac.AracPlaka)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="info-container">
                                <ul class="list-unstyled mb-4">
                                    <li class="mb-3">
                                        <span class="fw-medium text-heading me-2">Model:</span>
                                        <span>@Html.DisplayFor(model => arac.AracModel)</span>
                                    </li>
                                    <li class="mb-3">
                                        <span class="fw-medium text-heading me-2">Marka:</span>
                                        <span>@Html.DisplayFor(model => arac.AracMarka)</span>
                                    </li>
                                    <li class="mb-3">
                                        <span class="fw-medium text-heading me-2">Tipi:</span>
                                        <span class="badge rounded-pill bg-label-primary me-1l">@Html.DisplayFor(model => arac.AracTip)</span>
                                    </li>
                                </ul>
                                <!-- Diğer araç bilgileri -->
                                <div>
                                    <h5 class="pb-3 border-bottom mb-3">Hasarlar:</h5>
                                    <ul class="list-unstyled">
                                        @foreach (var hasar in arac.HasarKayitlars)
                                        {
                                            <li>
                                                @Html.ActionLink($"{hasar.Baslik} - {hasar.HasarDurumu}", "Details", "HasarKayitlars", new { id = hasar.HasarKayitlarId }, new { @class = "btn btn-outline-primary waves-effect" })
                                            </li>
                                        }
                                    </ul>
                                </div>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                }
                            </div>
                        </div>
                    </div>
                    <!-- /User Card -->
                    <!-- Plan Card -->
                    <!-- /Plan Card -->
                </div>
            }
        </div>
    }
</div>



@model ProjeHasarTakip.Models.HasarKayitlar

@{
    ViewBag.Title = "Hasar Kaydı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "HasarKayitlars", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>HasarKayitlar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HasarKayitlarId)

        <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">

                <div class="row fv-plugins-icon-container">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <h4 class="card-header">@ViewBag.Title</h4>
                            <!-- Account -->
                            <div class="card-body">
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.HasarResim, htmlAttributes: new { @class = "control-label" })
                                            <img src="@Url.Content(Model.HasarResim)" alt="Hasar Resmi" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" id="modalImage" data-toggle="modal" data-target="#myModal" />
                                            <br />
                                            <span class="text-muted">Mevcut Resim</span>
                                            <br />
                                            <input type="file" name="HasarResim" class="form-control" />
                                        </div>
                                        <div>

                                        </div>
                                    </div>


                                </div>

                            </div>
                            <div class="card-body pt-2 mt-1">
                                <form id="formAccountSettings" method="POST" onsubmit="return false" class="fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate">

                                    <div class="row mt-2 gy-4">
                                        <div class="col-md-6">
                                            <div class="form-floating form-floating-outline">

                                                @Html.DropDownList("AracId", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.AracId, "", new { @class = "text-danger" })
                                                @Html.LabelFor(model => model.AracId, "Araç Seçiniz", htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                        </div>



                                        <div class="col-md-6">
                                            <div class="form-floating form-floating-outline">
                                                <input class="form-control" type="text" id="Baslik" name="Baslik" value="@Model.Baslik" placeholder="">
                                                @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="input-group input-group-merge">
                                                <div class="form-floating form-floating-outline">
                                                    <input type="text" id="Aciklama" name="Aciklama" class="form-control" value="@Model.Aciklama" placeholder="">
                                                    @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating form-floating-outline">
                                                <input type="text" class="form-control" id="Tarih" value="@Model.Tarih" name="Tarih" placeholder="">
                                                @Html.LabelFor(model => model.Tarih, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating form-floating-outline">
                                                <select name="HasarDurumu" class="form-control" required>
                                                    <option>@Model.HasarDurumu</option>
                                                    <option value="Hasar Aktif">Hasar Aktif</option>
                                                    <option value="Hasar Giderildi">Hasar Giderildi</option>
                                                </select>
                                                @Html.LabelFor(model => model.HasarDurumu, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>

                                        </div>


                                        @*<div class="col-md-6">
                                                <div class="form-floating form-floating-outline">
                                                    <input type="text" class="form-control" id="HasarResim" value="@Model.HasarResim" name="HasarResim" placeholder="">
                                                    @Html.LabelFor(model => model.HasarResim, htmlAttributes: new { @class = "control-label col-md-2" })
                                                </div>
                                            </div>*@



                                    </div>
                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary me-2 waves-effect waves-light">Kaydı Güncelle</button>
                                        @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-secondary waves-effect waves-light" })

                                    </div>
                                    <input type="hidden">
                                </form>
                            </div>
                            <!-- /Account -->
                        </div>

                    </div>
                </div>
            </div>
            <!-- / Content -->


        </div>

    </div>


}





